<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LayarTiga">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="25dp"
            android:text="@string/screen_3"
            android:textSize="40sp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TextView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView

                android:gravity="center_horizontal"

                android:id="@+id/viewnama"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:textSize="25sp"

                android:layout_width="match_parent"
                android:layout_height="40dp">

            </TextView>

            <TextView
                android:gravity="center_horizontal"

                android:id="@+id/viewusia"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:textSize="25sp"

                android:layout_width="match_parent"
                android:layout_height="40dp">

            </TextView>

            <TextView
                android:gravity="center_horizontal"

                android:id="@+id/viewalamat"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:textSize="25sp"

                android:layout_width="match_parent"
                android:layout_height="40dp">

            </TextView>

            <TextView
                android:gravity="center_horizontal"

                android:id="@+id/viewpekerjaan"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:textSize="25sp"

                android:layout_width="match_parent"
                android:layout_height="40dp">

            </TextView>





        </LinearLayout>

        <Button
            android:textColor="@color/white"
            android:id="@+id/gotoscreen4"
            android:layout_centerInParent="true"
            android:text="@string/go_to_screen_4"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/blue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>

    </RelativeLayout>
</LinearLayout>